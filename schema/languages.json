{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "patternProperties": {
        "^[a-z]{3}$": {
            "title": "Language definition",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "title": "Language name",
                    "type": "string"
                },
                "fallback": {
                    "title": "Prioritized list of languages to use for fallback",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "pattern": "^[a-z]{3}$"
                    }
                }
            }
        }
    }
}