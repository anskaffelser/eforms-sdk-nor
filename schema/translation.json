{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "patternProperties": {
        "^.+$": {
            "title": "Translatable item",
            "type": "object",
            "additionalProperties": false,
            "required": [
                "name"
            ],
            "properties": {
                "name": {
                    "title": "Translation source",
                    "type": "string"
                },
                "history": {
                    "type": "array"
                }
            },
            "patternProperties": {
                "^[a-z]{3}$": {
                    "title": "Translated edition",
                    "type": "string"
                },
                "^[a-z]{3}_verify$": {
                    "title": "Indication of verification needed",
                    "type": "boolean",
                    "default": false
                }
            }
        }
    }
}