{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "noticeTypes": {
            "$ref": "#/definitions/noticeTypes"
        },
        "fields": {
            "type": "object",
            "patternProperties": {
                ".+": {
                    "$ref": "#/definitions/field"
                }
            }
        },
        "rules":{
            "type": "object",
            "patternProperties": {
                ".+": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/rule"
                    }
                }
            }
        }
    },
    "definitions": {
        "field": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "pattern": {
                    "type": "object",
                    "required": [
                        "value"
                    ],
                    "properties": {
                        "value": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "noticeTypes": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "integer"
                    },
                    {
                        "type": "string"
                    }
                ]
            }
        },
        "rule": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "context": {
                    "type": "string"
                },
                "test": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    }
}