{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "noticeTypes": {
            "$ref": "#/definitions/noticeTypes"
        },
        "aliases": {
            "type": "object",
            "patternProperties": {
                "^.+$": {
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "number"
                        }
                    ]
                }
            }
        },
        "fields": {
            "type": "object",
            "patternProperties": {
                ".+": {
                    "$ref": "#/definitions/field"
                }
            }
        },
        "rules": {
            "type": "object",
            "patternProperties": {
                ".+": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/rule"
                    }
                }
            }
        }
    },
    "definitions": {
        "field": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "pattern": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "value": {
                            "type": "string"
                        }
                    }
                },
                "parentNodeId": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                },
                "btId": {
                    "type": "string"
                },
                "xpathAbsolute": {
                    "type": "string"
                },
                "xpathRelative": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "presetValue": {
                    "type": "string"
                },
                "repeatable": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": [
                        "value",
                        "severity"
                    ],
                    "properties": {
                        "value": {
                            "type": "boolean"
                        },
                        "severity": {
                            "type": "string",
                            "enum": [
                                "ERROR"
                            ]
                        }
                    }
                },
                "mandatory": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "value": {
                            "type": "boolean"
                        },
                        "severity": {
                            "type": "string",
                            "enum": [
                                "ERROR"
                            ]
                        },
                        "constraints": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "additionalProperties": false,
                                "properties": {
                                    "noticeTypes": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    },
                                    "value": {
                                        "type": "boolean"
                                    },
                                    "severity": {
                                        "type": "string",
                                        "enum": [
                                            "ERROR"
                                        ]
                                    }
                                }
                            }
                        }
                    }
                },
                "codeList": {
                    "type": "object",
                    "additionalProperties": false,
                    "properties": {
                        "value": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string"
                                }
                            }
                        },
                        "severity": {
                            "type": "string",
                            "enum": [
                                "ERROR"
                            ]
                        }
                    }
                }
            }
        },
        "noticeTypes": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "type": "integer"
                    },
                    {
                        "type": "string"
                    }
                ]
            }
        },
        "rule": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "context": {
                    "type": "string"
                },
                "test": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                },
                "role": {
                    "type": "string",
                    "enum": [
                        "ERROR",
                        "WARN"
                    ],
                    "default": "ERROR"
                },
                "flag": {
                    "type": "string"
                }
            }
        }
    }
}